<div class="comment-form-wrap pt-5">

    <div class="mb-4">
        <h3 class="fw-bold text-dark">Yorum Yazın</h3>
    </div>

    <form action="/Blog/AddComment" method="post">
        <input type="hidden" name="BlogID" value="@ViewBag.blogid" />

        <div class="row g-3">

            <div class="col-md-6">
                <div class="form-floating">
                    <input type="text" class="form-control solid-input" id="name" name="Name" placeholder="Adınız" required>
                    <label for="name" class="text-secondary fw-medium">Ad Soyad</label>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-floating">
                    <input type="email" class="form-control solid-input" id="email" name="Email" placeholder="Email" required>
                    <label for="email" class="text-secondary fw-medium">Email Adresi</label>
                </div>
            </div>

            <div class="col-12">
                <div class="form-floating">
                    <textarea class="form-control solid-input" placeholder="Yorum" id="message" name="Message" style="height: 140px" required></textarea>
                    <label for="message" class="text-secondary fw-medium">Yorumunuz</label>
                </div>
            </div>

            <div class="col-12 mt-4">
                <button type="submit" class="btn btn-primary py-3 px-5 rounded-pill fw-bold shadow-primary btn-cta">
                    Yorumu Yayınla <i class="ri-send-plane-fill ms-2"></i>
                </button>
            </div>

        </div>
    </form>
</div>

<style>
    .solid-input {
        background-color: #f8f9fa; 
        border: 2px solid #e9ecef; 
        border-radius: 12px; 
        color: #495057;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .solid-input:focus {
            background-color: #ffffff; 
            border-color: var(--bs-primary);
            box-shadow: 0 0 0 5px rgba(var(--bs-primary-rgb), 0.15); 
            color: #000;
        }

    .form-floating > label {
        padding-left: 1.2rem;
        font-size: 0.95rem;
        color: #6c757d; 
    }

    .form-floating > .form-control {
        padding-left: 1.2rem;
    }

    .btn-cta {
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        border: none;
    }

    .shadow-primary {
        box-shadow: 0 4px 15px rgba(var(--bs-primary-rgb), 0.4);
    }

    .btn-cta:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(var(--bs-primary-rgb), 0.5);
    }
</style>