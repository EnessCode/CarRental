@model List<ResultAboutDto>

@foreach (var item in Model)
{
    <section class="py-5 my-5">
        <div class="container">
            <div class="row align-items-center gx-lg-5">

                <div class="col-lg-6 mb-4 mb-lg-0" data-aos="fade-right" data-aos-duration="1000">
                    <div class="position-relative">
                        <img src="@item.ImageUrl" class="img-fluid rounded-4 shadow-lg w-100" alt="Hakkımızda" style="object-fit: cover; min-height: 400px;">

                        <div class="position-absolute bottom-0 start-0 m-4 p-4 rounded-4 bg-white bg-opacity-90 backdrop-blur shadow-sm d-none d-md-block" style="max-width: 250px;">
                            <div class="d-flex align-items-center gap-3">
                                <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-3">
                                    <i class="ri-medal-line fs-3"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold mb-0 text-dark">10+ Yıllık</h6>
                                    <small class="text-muted">Sektör Deneyimi</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6" data-aos="fade-left" data-aos-duration="1000" data-aos-delay="200">
                    <span class="d-inline-block py-1 px-3 rounded-pill bg-primary bg-opacity-10 text-primary fw-bold small text-uppercase mb-3">
                        Hakkımızda
                    </span>

                    <h2 class="display-6 fw-bold mb-4 text-dark">
                        @item.Title
                    </h2>

                    <p class="text-secondary lead mb-4" style="line-height: 1.8;">
                        @item.Description
                    </p>

                    <div class="d-flex gap-3">
                        <a href="/Car/Index/" class="btn btn-primary btn-lg rounded-3 px-4 fw-bold shadow-sm transition-hover">
                            <i class="ri-search-line me-2"></i> Araç Seç
                        </a>
                        <a href="/Contact/Index/" class="btn btn-outline-dark btn-lg rounded-3 px-4 fw-bold transition-hover">
                            Bize Ulaşın
                        </a>
                    </div>

                    <div class="row mt-5 g-3">
                        <div class="col-6">
                            <div class="d-flex align-items-center gap-2">
                                <i class="ri-checkbox-circle-fill text-primary fs-5"></i>
                                <span class="fw-medium text-dark">Güvenli Ödeme</span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex align-items-center gap-2">
                                <i class="ri-checkbox-circle-fill text-primary fs-5"></i>
                                <span class="fw-medium text-dark">7/24 Destek</span>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
}