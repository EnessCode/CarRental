@model List<ResultLast3BlogsWithAuthorDto>

<div class="sidebar-box bg-white p-4 rounded-4 shadow-sm mb-4">
    <h3 class="fw-bold mb-4 text-dark" style="font-size: 1.25rem;">Son Yazılar</h3>

    @foreach (var item in Model)
    {
        <div class="d-flex align-items-center mb-4 pb-3 border-bottom position-relative blog-item-hover" style="@(item == Model.Last() ? "border:none !important; padding-bottom:0 !important; margin-bottom:0 !important;" : "")">
            
            <a href="/Blog/BlogDetail/@item.Id" class="flex-shrink-0 rounded-3 overflow-hidden" style="width: 90px; height: 90px;">
                <img src="@item.CoverImageUrl" 
                     alt="@item.Title" 
                     class="img-fluid w-100 h-100" 
                     style="object-fit: cover; transition: transform 0.3s ease;">
            </a>

            <div class="ms-3">
                <h5 class="mb-1" style="font-size: 0.95rem; line-height: 1.4;">
                    <a href="/Blog/BlogDetail/@item.Id" class="text-dark text-decoration-none fw-semibold stretched-link title-hover">
                        @item.Title
                    </a>
                </h5>
                <div class="small text-muted mt-1">
                    <span class="me-2"><i class="ri-calendar-line text-primary me-1"></i>@item.CreatedAt.ToString("dd MMM yyyy")</span>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .blog-item-hover:hover img {
        transform: scale(1.1);
    }
    .blog-item-hover:hover .title-hover {
        color: var(--bs-primary) !important;
    }
</style>