@model List<CarRental.Dto.BlogDtos.ResultLast3BlogsWithAuthorDto>

<div class="row g-4">
	@foreach (var item in Model)
	{
		<div class="col-lg-4 col-md-6 mb-4">
			<div class="card h-100 shadow-sm border-0 rounded-3 overflow-hidden">
				<img src="@item.CoverImageUrl" class="card-img-top" alt="@item.Title" style="height: 220px; object-fit: cover;">

				<div class="card-body p-4">
					<div class="d-flex align-items-center mb-3">
						<span class="badge bg-primary rounded-pill px-3 me-2">Blog</span>
						<small class="text-muted"><i class="ri-calendar-line me-1"></i>@item.CreatedAt.ToString("dd.MM.yyyy")</small>
					</div>

					<h5 class="card-title fw-bold mb-3">
						<a href="/Blog/BlogDetail/@item.Id" class="text-dark text-decoration-none">@item.Title</a>
					</h5>

					<div class="d-flex align-items-center mt-4">
						<img src="https://smithii.io/wp-content/uploads/2023/04/MODERATOR.webp"
							 class="rounded-circle me-2"
							 width="35" height="35"
							 style="object-fit: cover; border: 1px solid #ddd;"
							 alt="Yazar">

						<div class="author-info">
							<small class="text-muted d-block" style="font-size: 0.75rem;">Yazar</small>
							<span class="fw-bold text-dark" style="font-size: 0.9rem;">@item.AuthorName</span>
						</div>
					</div>
				</div>

				<div class="card-footer bg-white border-0 p-4 pt-0">
					<a href="/Blog/BlogDetail/@item.Id" class="btn btn-outline-primary w-100 rounded-pill">Devamını Oku</a>
				</div>
			</div>
		</div>
	}
</div>