@model List<ResultCategoryDto>

<div class="sidebar-box bg-white p-4 rounded-4 shadow-sm mb-4">
	<h3 class="fw-bold mb-4 text-dark" style="font-size: 1.25rem;">Kategoriler</h3>
	<ul class="list-unstyled p-0 m-0">
		@foreach (var item in Model)
		{
			<li class="mb-2">
				<a href="/Blog/BlogListByCategory/@item.Id" class="d-flex justify-content-between align-items-center text-decoration-none text-muted py-2 border-bottom category-link">
					<span><i class="ri-arrow-right-s-line me-2 text-primary"></i>@item.Name</span>
					<span class="badge bg-light text-secondary rounded-pill">@item.BlogCount</span>
				</a>
			</li>
		}
	</ul>
</div>

<style>
	.category-link {
		transition: all 0.3s ease;
	}

		.category-link:hover {
			color: var(--bs-primary) !important;
			padding-left: 10px;
		}

			.category-link:hover .badge {
				background-color: var(--bs-primary) !important;
				color: white !important;
			}
</style>