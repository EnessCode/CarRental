@model List<ResultCarWithBrandDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-5 bg-light position-relative" style="margin-top: 100px;">
	<div class="container">

		<div class="row justify-content-center mb-5">
			<div class="col-md-7 text-center" data-aos="fade-up">
				<span class="d-inline-block py-1 px-3 rounded-pill bg-primary bg-opacity-10 text-primary fw-bold small text-uppercase mb-2">
					Fırsatlar
				</span>
				<h2 class="fw-bold display-6 text-dark">Son Eklenen Araçlar</h2>
				<p class="text-muted">Filomuza yeni katılan son model araçları inceleyin.</p>
			</div>
		</div>

		<div class="row g-4">
			@foreach (var item in Model)
			{
				<div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
					<div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden hover-card transition-all">

						<div class="position-relative overflow-hidden car-image-wrapper">
							<span class="position-absolute top-0 start-0 m-3 badge bg-white text-primary rounded-pill px-3 py-2 shadow-sm fw-bold z-2">
								@item.BrandName
							</span>

							<img src="@item.CoverImageUrl" class="card-img-top w-100 object-fit-cover" alt="@item.Model" style="height: 250px;">

							<div class="image-overlay position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-10 opacity-0 transition-all"></div>
						</div>

						<div class="card-body p-4">
							<div class="d-flex justify-content-between align-items-start mb-3">
								<div>
									<h5 class="card-title fw-bold text-dark mb-1">@item.Model</h5>
									<div class="text-muted small">
										<i class="ri-map-pin-line text-primary me-1"></i> İstanbul / Şişli
									</div>
								</div>
								<div class="text-end">
									<h5 class="text-primary fw-bold mb-0">$500</h5>
									<small class="text-muted">/Günlük</small>
								</div>
							</div>

							<div class="d-flex justify-content-between border-top border-bottom py-3 my-3">
								<div class="text-center text-muted px-2 border-end w-100">
									<i class="ri-steering-2-line fs-5 d-block mb-1 text-primary"></i>
									<span class="small">Otomatik</span>
								</div>
								<div class="text-center text-muted px-2 border-end w-100">
									<i class="ri-gas-station-line fs-5 d-block mb-1 text-primary"></i>
									<span class="small">Dizel</span>
								</div>
								<div class="text-center text-muted px-2 w-100">
									<i class="ri-user-3-line fs-5 d-block mb-1 text-primary"></i>
									<span class="small">5 Kişi</span>
								</div>
							</div>

							<div class="d-grid gap-2 d-flex mt-3">
								<a href="#" class="btn btn-primary flex-grow-1 rounded-3 fw-bold py-2 shadow-sm">
									Hemen Kirala
								</a>
								<a href="/Car/CarDetail/@item.Id" class="btn btn-outline-secondary flex-grow-1 rounded-3 fw-bold py-2">
									Detaylar
								</a>
							</div>
						</div>

					</div>
				</div>
			}
		</div>
	</div>
</section>

<style>
	.hover-card:hover {
		transform: translateY(-10px);
		box-shadow: 0 20px 40px rgba(0,0,0,0.15) !important;
	}

		.hover-card:hover .card-img-top {
			transform: scale(1.05);
		}

	.card-img-top {
		transition: transform 0.5s ease;
	}

	.transition-all {
		transition: all 0.3s ease;
	}
</style>